<div class='container'>

  <table id='table_profile' class='table'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr id="id_<%= book.id %>">
          <td><%= book.name %></td>
          <td><%= book.status %></td>
          <td><%= link_to "Don't want it", books_unbookit_path(book), remote: true %></td>
          <td><%= link_to "Buy", books_buyit_path(book), class:'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


</div>
