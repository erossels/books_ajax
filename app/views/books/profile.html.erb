<div class='container'>

  <table id='table_profile' class='table'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr id="id_<%= book.id %>">
          <td><%= book.name %></td>
          <td><%= book.status %></td>
          <% if (book.status == 'booked') %>
            <td><%= link_to "Set it free", books_unbookit_path(book), remote: true, class:'btn btn-warning' %></td>
          <% elsif (book.status == 'payed') %>
            <td><%= link_to "Delete", book, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
          <% end %>
          <% if book.status != 'payed' %>
            <td><%= link_to "Buy", books_buyit_path(book), class:'btn btn-primary'%></td>
          <% end  %>     
        </tr>
      <% end %>
    </tbody>
  </table>


</div>
